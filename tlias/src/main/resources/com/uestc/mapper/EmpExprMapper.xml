<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.uestc.mapper.EmpExprMapper">
    <delete id="deleteByEmpIds">
        delete from emp_expr where emp_id in
        <foreach collection="ids" item="empId" open="(" separator="," close=")">
            #{empId}
        </foreach>
    </delete>

    <select id="insertBatch">
        insert into emp_expr(emp_id, begin, end, company, job) VALUES
        <foreach collection="empList" item="item" separator=",">
            (#{item.empId}, #{item.begin}, #{item.end}, #{item.company}, #{item.job})
        </foreach>
    </select>

    <select id="listByEmpId" resultType="com.uestc.pojo.EmpExpr">
        select * from emp_expr
        <where>
            <if test="empId != null">
                emp_id = #{empId}
            </if>
        </where>
    </select>
</mapper>
